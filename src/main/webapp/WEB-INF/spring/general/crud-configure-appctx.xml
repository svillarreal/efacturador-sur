<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- Query Customizers -->
	<bean id="customFilterQueriesHolder" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<entry key="com.topgroup.blankapp.model.PerfilBean" value-ref="perfilBeanFilterCustomizer" />
				<entry key="com.topgroup.blankapp.model.RolBean" value-ref="rolBeanFilterCustomizer" />
			</map>
		</constructor-arg>
	</bean>
	
	<!-- Action interceptors -->
	<bean id="customActionInterceptors" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<entry key="com.topgroup.blankapp.model.PerfilBean" value-ref="perfilBeanInteceptor" />
				<entry key="com.topgroup.blankapp.model.RolBean" value-ref="rolBeanInteceptor" />				
			</map>
		</constructor-arg>
	</bean>
	
	<!--  Validators -->
	<bean id="customValidators" class="java.util.HashMap"> 
		<constructor-arg> 
			<map> 
				<entry key="com.topgroup.blankapp.model.PerfilBean" value-ref="perfilBeanValidator" />
				<entry key="com.topgroup.blankapp.model.RolBean" value-ref="rolBeanValidator" />
		   </map> 
		</constructor-arg>
	</bean>
	
</beans>