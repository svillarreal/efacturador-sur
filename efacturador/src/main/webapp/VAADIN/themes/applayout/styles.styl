	font-weight bold
.v-slot-stage-on
.v-slot-stage-off
	margin-bottom 30px
.v-slot-stage-on:last-child
	margin-bottom 0px !important
.v-slot-wizard-stage-component-note
	margin-bottom 10px
.title
	background-color celeste
	color blanco
	font-size 14px !important
	font-weight 300
	padding 5px 10px
	margin-bottom 0px !important
.base_form_border
	border 1px solid celeste
	margin-bottom 20px
.v-caption
.v-widget
	font-size 12px
// FORM
.v-form
	width 100% !important
	padding 10px
	border 1px solid celeste
	.v-gridlayout-slot
		padding-right 12px
		&:last-child
			padding-right 24px !important
	.v-has-caption
		display block !important
		.v-caption
			.v-captiontext
