.v-slot-mainBody
	height auto !important
// LOADING
.v-app-loading
.v-loading-indicator
.v-loading-indicator-delay
.v-loading-indicator-wait
	position fixed !important
	background rgba(255,255,255,0.5) !important
	margin 0 !important
	width 100% !important
	height 100% !important
	&:before
		content "\f021"
		font-family "FontAwesome"
		font-size 32px
		color gris
		position fixed
		top 50%
		left 50%
		margin-top -16px
		margin-left -16px
		animation(spin 2s infinite linear)
		@keyframes spin
			0%
				transform rotate(0deg)
			100%
				transform rotate(359deg)
// TITLES
.wizard-title
	.v-label
		font-size 20px
		font-weight 300
		color celeste
		white-space normal !important
.v-slot-stage-title
.v-slot-stage-subtitle
	display inline-block !important
.stage-title
.stage-subtitle
	font-size 18px !important
.stage-title:after
	content "."
