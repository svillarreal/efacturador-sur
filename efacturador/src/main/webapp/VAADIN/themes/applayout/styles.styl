// TABLE
.v-table
	height auto !important
	margin-top 10px !important
	margin-bottom 10px !important
	// table header
	.v-table-header-wrap
		background celeste !important
		border none !important
		height auto !important
		.v-table-header-cell
		.v-table-header-cell-asc
		.v-table-header-cell-desc
			.v-table-resizer
				border-color blanco
				border-width 1px
				height 30px
			.v-table-sort-indicator
				background none !important
				height 30px
				&:before
					content ""
					display block
					margin-top 11px
					width 0
					height 0
			.v-table-caption-container
				text-align left
				font-weight 100
				color blanco
				text-overflow ellipsis
				padding 6px 10px
				margin 0 !important
				float none !important
