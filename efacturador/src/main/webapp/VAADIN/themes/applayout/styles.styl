							color blanco !important
					.v-textfield
						background blanco !important
						padding 3px 5px !important
						&.v-readonly
							background gris_claro !important
					.v-filterselect
						padding 3px 20px 3px 5px !important
						.v-filterselect-input
							height 16px !important
						.v-filterselect-button:before
							top 4px !important
					.v-textfield
					.v-filterselect
						height 24px !important
				.v-table-cell-content
					padding 3px 11px 3px 12px !important
					font-size 12px
					border-right 1px solid rgba(0,0,0,0.1)
					.v-table-cell-wrapper
						height 24px
						line-height 24px
						color celeste
					.v-button-caption
						color gris !important
						font-size 12px !important
						font-weight normal !important
					.v-widget.v-has-caption.v-caption-on-right
						width 100% !important
				.v-table-cell-content-normal
				.v-table-cell-content-normal-changed
				.v-table-cell-content-normal-invalid
				.v-table-cell-content-normal-changed-invalid
				.v-table-cell-content-selected
				.v-table-cell-content-selected-changed
				.v-table-cell-content-selected-invalid
				.v-table-cell-content-selected-changed-invalid
					color celeste
					.v-datefield-popupcalendar
						padding-right 25% !important
					.v-datefield-button
						width 24px !important
						height 24px !important
						&:before
							font-size 14px !important
					.v-errorindicator
						margin-right 0px !important
	// table footer
	.v-table-footer-wrap
		padding 10px 0px
		border none !important
		td
			border-right none !important
	.v-table-focus
		.v-table-cell-content
			border-top 1px solid transparent !important
			border-bottom 1px solid transparent !important
