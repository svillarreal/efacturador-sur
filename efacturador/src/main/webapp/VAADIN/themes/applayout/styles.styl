// FIELDS
.v-textfield
.v-filterselect
.v-textarea
	background-image none !important
	border 1px solid gris_claro !important
	outline none !important
	width 100% !important
	&.v-readonly
		background gris_mas_claro !important
// text
.v-textfield
	height 30px !important
	padding 5px !important
	color gris !important
	&.v-textfield-focus
		background none !important
	&.v-readonly.v-textfield-focus
		background gris_mas_claro !important
.v-textarea
	color gris !important
// select
.v-filterselect
	height 30px !important
	padding 5px 20px 5px 5px !important
	.v-filterselect-input
		width 100% !important
		height 18px !important
		color gris !important
	.v-filterselect-button
		background none !important
		position relative
		opacity 1 !important
		&:before
			content ""
			position absolute
			top 5px
			right 2px
			width 0
			height 0
			border-style solid
			border-width 8px 6px 0px 6px
			border-color gris_claro transparent transparent transparent
// dropdown
.v-filterselect-suggestpopup
	padding 0px !important
	margin-top 6px !important
	background blanco !important
	border none !important
	border-radius(0 !important)
	.gwt-MenuItem
		padding 2px 10px 4px !important
		color gris
		cursor pointer
		line-height 1
	.gwt-MenuItem-selected
		background-color celeste !important
		color blanco
	.v-filterselect-prevpage
	.v-filterselect-prevpage-off
	.v-filterselect-nextpage
	.v-filterselect-nextpage-off
		background gris !important
		border none !important
		opacity 1 !important
		height inherit !important
		span
			background none !important
			position relative
			&:before
				content ""
				display block
				width 0
				height 0
				position absolute
				top 1px
				left 50%
				margin-left -5px
	.v-filterselect-prevpage
	.v-filterselect-prevpage-off
		span:before
			border-style solid
			border-width 0 5px 7px 5px
			border-color transparent transparent blanco transparent
	.v-filterselect-nextpage
	.v-filterselect-nextpage-off
		span:before
			border-style solid
			border-width 7px 5px 0 5px
			border-color blanco transparent transparent transparent
	.v-filterselect-status
		display none !important
// BUTTONS
.v-button
	background-color azul
	background-image none !important
	border none !important
	margin 10px 5px
	.v-button-wrap
		padding 7px 20px 8px !important
		background none !important
		border none !important
		.v-button-caption
			color blanco
			text-transform uppercase
			text-shadow none !important
	&.v-disabled
	&.disabled
		opacity .5 !important
		cursor default !important
		&:focus
		&:active
			background-color azul
	&.btn_neg
		background-color rojo !important
	&.btn_pos
		background-color verde !important
.v-button-link:focus .v-button-caption
.v-button-borderless:focus .v-button-caption
	margin 0 !important
	border none !important
.v-button-link
	background none !important
	.v-button-wrap
		padding 0px !important
		.v-button-caption
			color gris !important
		.v-icon.FontAwesome
			font-size 18px
			font-weight bold
			color celeste !important
			margin 0
.v-link
	a
		color negro !important
		.v-icon.FontAwesome
			font-size 14px
			font-weight bold
			color gris !important
			margin 0
